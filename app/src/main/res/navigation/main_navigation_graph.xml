<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/MLFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.practicum.playlistmaker.search.ui.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_playFragment"
            app:destination="@id/playFragment" />
    </fragment>

    <fragment
        android:id="@+id/playFragment"
        android:name="com.practicum.playlistmaker.player.ui.PlayFragment"
        android:label="fragment_play"
        tools:layout="@layout/fragment_play" >
        <action
            android:id="@+id/action_playFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/MLFragment"
        android:name="com.practicum.playlistmaker.medialibrary.ui.ml.MLFragment"
        android:label="fragment_medialab"
        tools:layout="@layout/fragment_ml" >
        <action
            android:id="@+id/action_MLFragment_to_MLPlaylistsFragment"
            app:destination="@id/MLPlaylistsFragment" />
        <action
            android:id="@+id/action_MLFragment_to_MLCreatePlaylistFragment"
            app:destination="@id/MLCreatePlaylistFragment" />
        <action
            android:id="@+id/action_MLFragment_to_MLFavoritesFragment"
            app:destination="@id/MLFavoritesFragment" />
        <action
            android:id="@+id/action_MLFragment_to_playFragment"
            app:destination="@id/playFragment" />
    </fragment>

    <fragment
        android:id="@+id/MLPlaylistsFragment"
        android:name="com.practicum.playlistmaker.medialibrary.ui.playlists.MLPlaylistsFragment"
        android:label="MLPlaylistsFragment" />

    <fragment
        android:id="@+id/MLCreatePlaylistFragment"
        android:name="com.practicum.playlistmaker.medialibrary.ui.playlists.MLCreatePlaylistFragment"
        android:label="MLCreatePlaylistFragment"
        tools:layout="@layout/fragment_create_playlist" />

    <fragment
        android:id="@+id/MLFavoritesFragment"
        android:name="com.practicum.playlistmaker.medialibrary.ui.favorites.MLFavoritesFragment"
        android:label="MLFavoritesFragment" >
        <action
            android:id="@+id/action_MLFavoritesFragment_to_playFragment"
            app:destination="@id/playFragment" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.practicum.playlistmaker.settings.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
</navigation>
