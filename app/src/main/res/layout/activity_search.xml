<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_back_from_search_activity"
        style="@style/GoBackButtons"
        android:text="@string/button_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!-- Окно поиска описано в отдельном layout -->

    <include
        android:id="@+id/search_box"
        layout="@layout/search_layout"
        app:layout_constraintTop_toBottomOf="@id/button_back_from_search_activity"
        />

    <TextView
        android:id="@+id/heading_search_history_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/heading_search_history_list_view"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_box" />

    <ListView
        android:id="@+id/search_history_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heading_search_history_list_view" />

</androidx.constraintlayout.widget.ConstraintLayout>