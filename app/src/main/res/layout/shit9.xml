<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/shit7"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder"
        tools:ignore="ContentDescription,UnusedAttribute,ImageContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            style="@style/searchTrackFirstTitle"
            android:layout_marginTop="14dp"
            android:height="20dp"
            tools:text="Playlist title" />

        <TextView
            android:id="@+id/tvCount"
            style="@style/searchTrackSecondTitle"
            android:layout_width="wrap_content"
            android:layout_marginStart="@dimen/dp8"
            tools:ignore="TextContrastCheck"
            tools:text="123 tracks" />

    </LinearLayout>

</LinearLayout>