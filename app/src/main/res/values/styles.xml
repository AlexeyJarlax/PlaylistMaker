<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- СТИЛИ ДЛЯ ФОНОВ-->
    <!-- Стиль для главного меню-->
    <style name="FrontMenuLayout" parent="Widget.MaterialComponents.TextView">
        <item name="buttonStyle">@style/SettingsMenuButtons</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_main</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_for_linear_layout</item>
        <item name="android:paddingTop">@dimen/padding_for_linear_layout</item>
        <item name="android:paddingEnd">@dimen/padding_for_linear_layout</item>
        <item name="android:paddingBottom">@dimen/padding_for_linear_layout</item>
    </style>

    <!-- Стиль для вложенных менюшек-->
    <style name="BackMenuLayout" parent="Widget.MaterialComponents.TextView">
        <item name="buttonStyle">@style/SettingsMenuButtons</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/background_secondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- СТИЛИ ДЛЯ КНОПОК, ДИНАМИЧЕСКИХ ЭЛЕМЕНТОВ-->
    <!-- Стиль кнопок для главного меню -->
    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/MainMenuButtons</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_main</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/icon_main</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/buttons_main</item>
    </style>

    <!-- Стиль кнопок для вложенных менюшек-->
    <style name="SettingsMenuButtons" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/SettingsMenuButtons</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/icon_secondary</item>
        <item name="android:textAllCaps">false</item> <!-- капс -->
        <item name="android:padding">@dimen/padding_for_linear_layout</item>
        <item name="android:elevation">0dp</item> <!-- тени -->
        <item name="android:stateListAnimator">@null</item> <!-- анимации нажатия -->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/buttons_secondary</item>
    </style>

    <!-- Стиль для кнопки возврата назад во вложенных менюхах-->
    <style name="GoBackButtons" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/SettingsMenuButtons</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">0dp</item>
        <item name="icon">@drawable/back</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/text_secondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/padding_for_linear_layout</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:backgroundTint">@color/buttons_secondary</item>
    </style>

    <!-- Стиль строки ввода поиска-->
    <style name="SearchButtons" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/search_edit_text_and_icon</item>
        <item name="android:textColorHint">@color/search_edit_text_and_icon</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:drawableStart">@drawable/search</item>
        <item name="android:drawableTint">@color/search_edit_text_and_icon</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:hint">@string/button_search</item>
        <item name="android:autofillHints"></item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Стиль отчистки ввода поиска-->
    <style name="ClearButtonStyle" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:src">@android:drawable/ic_delete</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_alignTop">@id/search_edit_text</item>
        <item name="android:layout_alignBottom">@id/search_edit_text</item>
        <item name="android:layout_alignEnd">@id/search_edit_text</item>
        <item name="android:visibility">gone</item>
    </style>

</resources>