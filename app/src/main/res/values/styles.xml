
<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<style name="main_menu_buttons" parent="Widget.MaterialComponents.Button"><!-- Стиль кнопок для главного меню -->
    <item name="buttonStyle">@style/main_menu_buttons</item>
    <item name="android:textSize">22sp</item>
    <item name="android:backgroundTint">@color/white</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:padding">8dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">70</item>
    <item name="cornerRadius">16dp</item><!-- Задаем размер закругления углов без префикса app:... -->
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">8dp</item>
    <item name="iconSize">24dp</item>
    <item name="iconTint">@color/icon_black</item>
</style>

    <style name="settings_menu_buttons" parent="Widget.MaterialComponents.Button"><!-- Стиль кнопок для меню настройки-->
        <item name="buttonStyle">@style/settings_menu_buttons</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">18dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/icon_gray</item>
    </style>

</resources>