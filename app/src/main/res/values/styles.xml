<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="main_menu_buttons" parent="Widget.MaterialComponents.Button"><!-- Стиль кнопок для главного меню -->
        <item name="buttonStyle">@style/main_menu_buttons</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/icon_black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="settings_menu_buttons" parent="Widget.MaterialComponents.Button"><!-- Стиль кнопок для меню настройки-->
        <item name="buttonStyle">@style/settings_menu_buttons</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">start</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/padding_icon</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconTint">@color/icon_gray</item>
        <item name="android:textAllCaps">false</item> <!-- Убрал капс -->
        <item name="android:padding">@dimen/padding_for_linear_layout</item>
        <item name="android:elevation">0dp</item> <!-- Удаление тени -->
        <item name="android:stateListAnimator">@null</item> <!-- Удаление анимация нажатия -->
    </style>
</resources>