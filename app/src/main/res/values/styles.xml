<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- СТИЛИ ДЛЯ ФОНОВ-->
    <!-- Стиль для главного меню-->
    <style name="FrontMenuLayout" parent="Widget.MaterialComponents.TextView">
        <item name="buttonStyle">@style/SecondaryButtonsAndText</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_black</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/yp_blue_and_yp_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- Стиль для вложенных менюшек-->
    <style name="BackMenuLayout" parent="Widget.MaterialComponents.TextView">
        <item name="buttonStyle">@style/SecondaryButtonsAndText</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/yp_white_and_yp_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- СТИЛИ ДЛЯ КНОПОК, ДИНАМИЧЕСКИХ ЭЛЕМЕНТОВ-->
    <!-- Стиль кнопок для главного меню -->
    <style name="MainMenuButtons" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/MainMenuButtons</item>
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_black</item>
        <item name="android:padding">@dimen/dp8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/button_weight</item>
        <item name="cornerRadius">@dimen/dp16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp16</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/yp_black_and_yp_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_white_and_yp_white</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- Стиль кнопок и текста для вложенных менюшек-->
    <style name="SecondaryButtonsAndText" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cornerRadius">0dp</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/dp16</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/yp_text_gray_and_yp_white</item>
        <item name="android:textAllCaps">false</item> <!-- капс -->
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:elevation">0dp</item> <!-- тени -->
        <item name="android:stateListAnimator">@null</item> <!-- анимации нажатия -->
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:backgroundTint">@color/yp_white_and_yp_black</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- Стиль для кнопки возврата назад во вложенных менюхах-->
    <style name="GoBackButtons" parent="Widget.MaterialComponents.Button">
        <item name="buttonStyle">@style/SecondaryButtonsAndText</item>
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">0dp</item>
        <item name="icon">@drawable/ic_btn_back</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp12</item>
        <item name="iconSize">@dimen/dp24</item>
        <item name="iconTint">@color/yp_black_and_yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dp12</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_white_and_yp_black</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- Стиль строки ввода поиска-->
    <style name="SearchButtons" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/util_rounded_corners_8dp_light_gray</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_black</item>
        <item name="android:textColorHint">@color/yp_text_gray_and_yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/button_search</item>
        <item name="android:autofillHints">truth</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
    </style>

    <style name="SearchIconStyle" parent="SearchButtons">
        <item name="android:tint">@color/yp_text_gray_and_yp_black</item>
        <item name="android:background">@color/yp_light_gray_and_yp_white</item>
    </style>

    <style name="TrackStyleCustom" parent="SearchButtons">
        <item name="android:tint">@color/yp_text_gray_and_yp_white</item>
        <item name="android:background">@color/yp_white_and_yp_black</item>
    </style>

    <style name="IcPoint" parent="TrackStyleCustom">
        <item name="android:layout_margin">0dp</item>"
    </style>

    <style name="Placeholder" parent="TrackStyleCustom">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">-4dp</item>
    </style>

    <style name="ErrorTransparent" parent="TrackStyleCustom">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@android:color/transparent</item>
    </style>

    <!-- Стиль строки c названием песни-->
    <style name="TrackText" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_sp16</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:textColorHint">@color/yp_text_gray_and_yp_black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:elevation">0dp</item> <!-- тени -->
        <item name="android:stateListAnimator">@null</item> <!-- анимацию нажатия -->
    </style>

    <!-- Стиль строки c автором, продолжительностью-->
    <style name="TrackTextSmall" parent="TrackText">
        <item name="android:textSize">@dimen/text_size_sp11</item>
        <item name="android:textColor">@color/yp_text_gray_and_yp_white</item>
    </style>

    <!-- Стиль строк в проигрывателе title-->
    <style name="TitleTextSmall" parent="TrackText">
        <item name="android:textSize">@dimen/text_size_sp13</item>
        <item name="android:textColor">@color/yp_text_gray_and_yp_text_gray</item>
    </style>

    <!-- Стиль строк в проигрывателе Content-->
    <style name="ContentTextSmall" parent="TitleTextSmall">
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
    </style>

    <!-- Стиль строк в проигрывателе track_name-->
    <style name="TrackNameText" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:elevation">0dp</item> <!-- тени -->
        <item name="android:stateListAnimator">@null</item> <!-- анимацию нажатия -->
    </style>

    <!-- Стиль строк в проигрывателе track_name-->
    <style name="TrackArtistText" parent="TrackNameText">
        <item name="android:textSize">@dimen/text_size_sp14</item>
    </style>

    <style name="ErrorButtons" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/yp_white_and_yp_black</item>
        <item name="android:textSize">@dimen/text_size_sp14</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_black_and_yp_white</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <!-- Стиль строки c описанием ошибки, стиль строки с историей поиска "вы искали"-->
    <style name="ErrorTextBig" parent="TrackText">
        <item name="android:textSize">@dimen/text_size_sp19</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Стиль Tab для фрагментов медиатеки"-->
    <style name="TabText" parent="">
        <item name="android:textSize">@dimen/text_size_sp14</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/yp_black_and_yp_white</item>
        <item name="tabIndicatorColor">@color/yp_black_and_yp_white</item>
        <item name="tabRippleColor">@color/yp_black_and_yp_white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Стиль прокладки в верхней части экрана с названием рездела"-->
    <style name="Gasket" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:textColor">@color/yp_black_and_yp_white</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/dp16</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="PLBottomSheetHandle">
        <item name="backgroundColor">@color/yp_light_gray</item>
    </style>

    <style name="PLEditTextForNewPlaylist">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:defaultFocusHighlightEnabled">false</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/width_400</item>
    </style>

    <style name="PLLayoutForNewPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/input_field</item>
        <item name="hintTextColor">@color/input_field</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="android:textColorHint">?attr/colorOnPrimary</item>
    </style>

    <style name="PLbuttonCreateNewPlaylist">
        <item name="android:layout_marginHorizontal">18dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:background">@drawable/button_create</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:textFontWeight">@integer/width_500</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="PLMaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PLWidget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PLItemMenu">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textFontWeight">@integer/width_400</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="PLToolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/PLTitleText</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PLTitleText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_sp22</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textFontWeight">@integer/width_500</item>
    </style>

    <style name="CustomSwitch" parent="SecondaryButtonsAndText">
        <item name="thumbTint">@color/yp_text_gray_and_yp_blue</item>
        <item name="trackTint">@color/yp_light_gray_and_yp_text_gray</item>
    </style>
</resources>